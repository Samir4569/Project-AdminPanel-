@model List<Order>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title ">Order Status</h4>
                <a asp-action="Create" asp-controller="Orders" class="btn rounded-pill btn-primary float-right" style="width: 120px; margin-left: 5px;">Create</a>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                
                                <th> Client Name </th>
                                <th> Product Cost </th>
                                <th> Project </th>
                                <th> Payment Mode </th>
                                <th> Start Date </th>
                                <th> Payment Status </th>
                                <th> Description </th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                @foreach(Order item in Model)
                                {
                                <tr>
                                    <td>
                                        <img src="~/assets/images/faces/@item.Image" alt="image" />
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>

                                    <td> $@item.Price </td>
                                    <td> @item.ProjectName </td>
                                    <td> @item.PaymentMode </td>
                                    <td> @item.Startdate </td>
                                    <td>
                                        @if (item.IsAproved)
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn btn-success" style="margin-right: 5px;width:120px">Approved</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn btn-danger" style="margin-right: 5px;width:120px">Rejected</a>
                                        }

                                    </td>
                                    <td>

                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn rounded-pill btn btn-warning" style="margin-right: 5px;width:120px">Detail</a>
                                       

                                </tr>
                                }
                              
                            
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>