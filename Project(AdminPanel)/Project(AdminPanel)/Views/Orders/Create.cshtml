 @model Order
<div class="col-12">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Client Create</h5>

        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname" asp-for="Photo"></label>
                    <input accept="image/*" asp-for="Photo" class="form-control">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-fullname" asp-for="ClientName"></label>
                    <input asp-for="ClientName" class="form-control">
                    <span class="text-danger" asp-validation-for="ClientName"></span>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" for="basic-default-message" asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
                <a asp-action="Index" class="btn btn-secondary text-white">GoBack</a>
            </form>
        </div>
    </div>
</div>
